      <option name="COMMAND" value="./node_modules/.bin/eslint" />
      <option name="PARAMETERS" value="--fix $FilePathRelativeToProjectRoot$" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>